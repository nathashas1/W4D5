<% if type == :edit %>
  <% action_url = user_url(user) %>
  <% button_value = "Update user" %>
<% else %>
  <% action_url, button_value = new_user_url, "Create user" %>
  <%# button_value = "Create user"  %>
<% end %>

<form action="<%= action_url %>" method="post">
    
  <% if type == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
    
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
  <label for="my_username">Update username:</label>
  <input type="text" id="my_username" name="user[username]" value="<%= user.username %>">
  <br>
  <br>
  
  <label for="email">Email:</label>
  <input type="email" id="email" name="user[email]" value="<%= user.email %>">
  <br>
  <br>
  
  <label for="password">Password:</label>
  <input type="password" id="password" name="user[password]" value="<%= user.password %>">
  <br>
  <br>
  
  
  <input type="submit" value="<%= button_value %>">
  <br>
  <br>
  
</form>